<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Profile</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Personal Information
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/user" method="POST" role="form">
                        <input type="hidden" name="_method" value="PUT" />

                            <fieldset disabled>
                                <div class="form-group">
                                    <label for="disabledSelect">Google email</label>
                                    <input class="form-control" id="disabledInput" type="text" placeholder="<%= @user.google_email %>" disabled>
                                    <p class="help-block">This is automatically set from the google account you logged in with.</p>
                                </div>
                            </fieldset>


                            <fieldset disabled>
                                <div class="form-group">
                                    <label for="disabledSelect">Name</label>
                                    <input class="form-control" id="disabledInput" type="text" placeholder="<%= @user.name %>" disabled>
                                    <p class="help-block">This is automatically set from the google account you logged in with.</p>
                                </div>
                            </fieldset>


                            <div class="form-group">
                                <label>Nickname</label>
                                <input class="form-control" type="text" name="handle" value="<%= @user.handle %>">
                                <p class="help-block">The name you'd like to be known by on this Chawk Server (defaults to email)</p>
                            </div>


                            <div class="form-group">
                                <label>Contact Email</label>
                                <input class="form-control" type="text" name="email" value="<%= @user.email %>">
                                <p class="help-block">The email address you would like system mail from.</p>
                            </div>

                            <button type="submit" class="btn btn-default">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
   </div>

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                API Access
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/api_key" method="POST" role="form">
                            <fieldset disabled>
                                <div class="form-group">
                                    <label for="disabledSelect">API Key:</label>
                                    <br />
                                    <code><%= @user.api_key %></code>
                                </div>
                            </fieldset>
                            <button type="submit" class="btn btn-default">New API Key</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
   </div>

</div>
