	<body>
		<% @messages.each do |message|%>
			<div style="background:pink;color:red;"><h1><%= message %></h1></div>
		<% end %>

		<div class="container">

		<%= yield %>

		</div><!-- /.container -->

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
